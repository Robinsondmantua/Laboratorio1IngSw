@model Laboratorio1IngSw.Models.DB.Asignaturas

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Borra Asignatura @Html.DisplayFor(model => model.Descripcion)</h2>

<h3>¿Está seguro qué quiere borrar esta asignatura?</h3>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Grado.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Grado.Descripcion)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <p>
            <button type="submit" class="btn btn-default btn-md"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Borrar </button>
            <button type="button" class="btn btn-default btn-md" onclick="location.href='@Url.Action("Index", "Asignaturas")'"><span class="glyphicon glyphicon-backward" aria-hidden="true"></span> Volver </button>
        </p>
    </div>
}
</div>
