@model Laboratorio1IngSw.Models.DB.Asignaturas

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalle de la Asignatura @Html.DisplayFor(model => model.Descripcion)</h2>

<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Grado.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Grado.Descripcion)
                </dd>

            </dl>
        </div> 
    </div> 
</div>
<div>
    <p>
        <button type="button" class="btn btn-default btn-md" onclick="location.href='@Url.Action("Edit", "Asignaturas", new { id = Model.IDAsignatura })'"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar </button>
        <button type="button" class="btn btn-default btn-md" onclick="location.href='@Url.Action("Index", "Asignaturas")'"><span class="glyphicon glyphicon-backward" aria-hidden="true"></span> Volver </button>
    </p>
</div>
